<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_search_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="io.charliealbright.githubsearch.view.SearchActivity"
    tools:showIn="@layout/activity_search">

        <TextView
            android:id="@+id/activity_search_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/vert_margin"
            android:layout_marginStart="@dimen/horiz_margin"
            android:layout_marginEnd="@dimen/horiz_margin"
            android:textAlignment="center"
            android:text="@string/search_label"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/activity_search_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/vert_margin_small"
            android:layout_marginStart="@dimen/horiz_margin"
            android:layout_marginEnd="@dimen/horiz_margin"
            android:layout_below="@id/activity_search_label">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="text"
                android:maxLines="1"
                android:hint="@string/search_hint"/>

        </android.support.design.widget.TextInputLayout>

</RelativeLayout>
